<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.squidgle.philly"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />
<!--     permission required for MapView to work -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:debuggable="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">
<!--         explicitly state that we are using the external google maps library -->
    	<uses-library android:name="com.google.android.maps" />
    	
<!--     	activity for the main dashboard -->
        <activity
            android:label="@string/app_name"
            android:name=".DashActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/location_view_title"
            android:name=".LocationView">
        </activity>
        
        <activity
            android:label="@string/settings_title"
            android:name=".Settings">
        </activity>
        
    </application>

</manifest>